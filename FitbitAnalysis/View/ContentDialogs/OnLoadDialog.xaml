<ContentDialog
    x:Class="FitbitAnalysis_Phillip_Morris.View.OnLoadDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    x:Name="loadDialog"
    Title="Attention">

    <Grid  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Width="300" CanDrag="True" Margin="0,0,0,100">
        <TextBlock x:Name="prompt" Text="Would you like to merge this file" Margin="0,5,1,10" HorizontalAlignment="Right" Width="289" />
        <Button  Content="Merge" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,108,0,-105" Click="mergeButton_OnClick"/>
        <Button  Content="Replace" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="103,108,0,-105" Click="replaceButton_OnClick"/>
        <Button  Content="Cancel" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="205,108,0,-105" Click="cancelButton_OnClick"/>
    </Grid>
</ContentDialog>
